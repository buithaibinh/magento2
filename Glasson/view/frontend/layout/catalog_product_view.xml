    <head>
        <css src="Skg_Glasson::css/glasson.css"/>
    </head>
    <body>
        <referenceBlock name="product.info.addtocart">
            <block class="Magento\Catalog\Block\Product\View"
                   name="product.tryon"
                   template="Skg_Glasson::tryon-view.phtml"
                   before="-" ifconfig="glasson/tryon/enable_view"/>
        </referenceBlock>
        <referenceBlock name="product.info.addtocart.additional">
            <block class="Magento\Catalog\Block\Product\View"
                   name="product.tryon.config"
                   template="Skg_Glasson::tryon-view.phtml"
                   before="-" ifconfig="glasson/tryon/enable_view"/>
        </referenceBlock>
    </body>
</page>